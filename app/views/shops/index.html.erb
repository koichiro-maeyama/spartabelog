<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
    <h1>店舗リスト</h1>
    <hr>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>店名</th>
          <th>電話番号</th>
          <th>住所</th>
          <th>HP</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @shops.each do |shop| %>
          <tr>
            <td><%= shop.shopname %></td>
            <td><%= shop.telno %></td>
            <td><%= shop.address %></td>
            <td><%= shop.url %></td>
            <td><%= link_to 'クチコミを見る', shop , class: "btn btn-default btn-xs"%></td>
            <td><%= link_to '編集', edit_shop_path(shop) , class: "btn btn-default btn-xs"%></td>
            <td><%= link_to '削除', shop, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-default btn-xs"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '新しく店舗を追加する', new_shop_path , class: "btn btn-default btn-xs"%>
  </div>
</div>
