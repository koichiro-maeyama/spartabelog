<%= form_for([@shop, @review]) do |f| %>
  <div class="form-group">
    <%= f.label :body, 'レビュー' %><br>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :score, '点数' %><br>
    <%= f.text_area :score, class: "form-control" %>
  </div>
  <%= f.submit %>
<% end %>
